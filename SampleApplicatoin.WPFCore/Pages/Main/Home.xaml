<Page x:Class="SampleApplicatoin.WPFCore.Pages.Main.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SampleApplicatoin.WPFCore.Pages.Main"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="900"
      Title="Home">

    <Grid Background="#fff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="notifRow" Height="250"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="350"/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="2" Margin="25 0">
            <StackPanel>
                <TextBlock Text="Home" Margin="0 30"
                           FontSize="24" FontWeight="SemiBold"/>
                <Border CornerRadius="10" x:Name="notifBorder"
                        Background="#5AE190" Height="140"
                        Padding="20 10" HorizontalAlignment="Stretch">
                    <StackPanel>
                        <Grid>
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock FontSize="18" FontWeight="SemiBold" Opacity="0.8" 
                                           Margin="0 10 0 10"
                                           Text="Добро Пожаловать в Management System!"/>
                                <TextBlock FontSize="18" FontWeight="SemiBold" Opacity="0.8" Margin="0 0 0 10"
                                           Text="Если у вас возникли вопросы, вы можете задать их нам в меню “Помощь”!"/>
                                <TextBlock FontSize="18" FontWeight="SemiBold" Opacity="0.8"
                                           Text="Наша команда ответит вам как можно скорее!"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" Margin="10 10 0 0">
                                <Button Click="Button_Click"
                                    Style="{StaticResource closeNotificationBtn}">
                                    <Image Source="/Source/Images/Button/Close.png"
                                    Width="14" Height="14" Margin="0 0 7.5 0"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="1">
            <Border CornerRadius="10" Margin="25 10 10 10"
                    Background="#F4F4F4">
                <StackPanel>
                    
                </StackPanel>
            </Border>
        </Border>

        <Border Grid.Row="1" Grid.Column="2">
            <Border CornerRadius="10" Margin="10 10 25 10"
            Background="#F4F4F4">
                <StackPanel>

                </StackPanel>
            </Border>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="2">
            <Border CornerRadius="10" Margin="25 10 25 10"
            Background="#F4F4F4">

            </Border>
        </Border>
    </Grid>
</Page>
